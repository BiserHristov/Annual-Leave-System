@model IndexViewModel;

@{
    ViewData["Title"] = "Wellcome!";
}

<div class="text-center heading-margin">
    <h1 class="font-italic">Welcome to Annual Leave System!</h1>
</div>
<div class="text-center">
    <h4>Currently we have in total:</h4>
</div>
<div class="text-center col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Employees</th>
                <th scope="col">Approved Leaves</th>
                <th scope="col">Pending approvals</th>
                <th scope="col">Total days</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="font-weight-bold">@Model.EmployeesCount</td>
                <td class="font-weight-bold">@Model.ApprovedLeaveCount</td>
                <td class="font-weight-bold">@Model.InProgressLeaveCount</td>
                <td class="font-weight-bold">@Model.AllLeavesTotalDays</td>
            </tr>
        </tbody>
    </table>
</div>
