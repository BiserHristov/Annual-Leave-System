@model AddLeaveFormModel;

@{
    this.ViewData["Title"] = "Add new leave request";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center"> Add Leave Request:</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="form-control datepicker" id="datetimepicker4" placeholder="Your start date..." />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <input asp-for="EndDate" class="form-control datepicker" placeholder="Your end date..." />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LeaveTypeId"></label>
                    <select asp-for="LeaveTypeId" class="form-control">
                        @foreach (var type in Model.LeaveTypes)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    </select>
                    <span asp-validation-for="LeaveTypes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReplacementEmployeeId"></label>
                    <select asp-for="ReplacementEmployeeId" class="form-control">
                        @foreach (var type in Model.EmployeesInTeam)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ReplacementEmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Comments"></label>
                    <textarea asp-for="Comments" class="form-control datepicker" rows=4 placeholder="Comments..."></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Add" />
                @*<script type="text/javascript">
                        $(function() {
                           // Bootstrap DateTimePicker v4
                            $('#datetimepicker4').datetimepicker({
                                 format: 'DD/MM/YYYY'
                           });
                        });
                    </script>*@
            </form>
        </div>
    </div>
</div>