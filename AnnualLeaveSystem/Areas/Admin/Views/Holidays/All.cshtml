@model IEnumerable<HolidayServiceModel>

@{
    ViewBag.Tite = "All holidays";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <table class="table table-hover">

                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td class="text-danger">No records!</td>
                        </tr>
                    }

                    @foreach (var holiday in Model)
                    {
                        <tr>
                            <td>@holiday.Date</td>
                            <td>@holiday.Name</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Holidays" asp-action="Edit" asp-route-Id="@holiday.Id" class="btn btn-warning">Edit</a>
                                <a asp-area="Admin" asp-controller="Holidays" asp-action="Delete" asp-route-Id="@holiday.Id" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
